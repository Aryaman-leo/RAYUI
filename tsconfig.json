{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "jsx": "react-jsx",
    "strict": true,

    "rootDir": "src",
    "outDir": "dist/types",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
